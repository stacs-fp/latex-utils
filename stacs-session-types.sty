\ProvidesPackage{stacs-session-types}
%
% A LaTeX Style file containing various utilities for helping to
% type-set Session types
%
% The core principle behind the design of the utilities is the use of
% math-mode to perform the type setting. All functions and commands
% unless documented are to be used in math mode.
%
% ------------------------------------------------------------------ [ Options ]
% Currently there are not class options.
% ----------------------------------------------------------------- [ Packages ]
\RequirePackage{etoolbox}

\RequirePackage{xspace}
\RequirePackage{fixmath}
\RequirePackage[fixamsmath]{mathtools}

\newcommand{\MPSTactor}[1]{\ensuremath{\mathsf{#1}}}
\newcommand{\MPSTtype}[1]{\ensuremath{\mathtt{#1}}}

\newcommand{\MPSTGpass}[2][k]{\ensuremath{#1\langle\MPSTtype{#2}\rangle}}
\newcommand{\MPSTGsend}[2]{\ensuremath{%
    \MPSTactor{#1}%
    \rightarrow%
    \MPSTactor{#2}%
  }}

\newcommand{\MPSTcond}[1]{\ensuremath{%
    \mathbf{#1}%
    \Rightarrow%
  }}
\newcommand{\MPSTGbranchStart}[1][k]{\ensuremath{#1}\{}

\newcommand{\MPSTbranchEnd}{\}}

\newcommand{\MPSTrec}[1][t]{\ensuremath{\mu\mathbf{#1}}}
\newcommand{\MPSTrecvar}[1]{\ensuremath{\mathbf{#1}}}
\newcommand{\MPSTend}{\ensuremath{\mathsf{end}}}

\newcommand{\MPSTsemi}{\ensuremath{\,;\,}}
\newcommand{\MPSTdot}{\ensuremath{\,.\,}}
\newcommand{\MPSTcolon}{\ensuremath{\,:\,}}
\newcommand{\MPSTcomma}{\ensuremath{\,,\,}}

\newcommand{\MPSTLsend}[2][k]{\ensuremath{#1!\langle\MPSTtype{#2}\rangle}}
\newcommand{\MPSTLrecv}[2][k]{\ensuremath{#1?\langle\MPSTtype{#2}\rangle}}

\newcommand{\MPSTLbranchStart}[1][k]{\ensuremath{#1}\&\{}
\newcommand{\MPSTLselectStart}[1][k]{\ensuremath{#1}\oplus\{}


