\ProvidesPackage{stacs-crypto}
%
% A LaTeX Style file containing various utilities for helping to
% type-set various Crypto related things.
%
% The core principle behind the design of the utilities is the use of
% math-mode to perform the type setting. All functions and commands
% unless documented are to be used in math mode.
%
% ------------------------------------------------------------------ [ Options ]
% Currently there are not class options.
% ----------------------------------------------------------------- [ Packages ]
\RequirePackage{etoolbox}

\RequirePackage{xspace}
\RequirePackage{fixmath}
\RequirePackage[fixamsmath]{mathtools}


\newcommand{\id}[1]{\ensuremath{\mathsf{ID}(#1)}}
\newcommand{\send}[3]{\ensuremath{#1\rightarrow #2:#3}}

% -------------------------------------------------------- [ Crypto Primitives ]
\newcommand{\symmetric}[2]{\ensuremath{\{#1\}_{#2}}}
\newcommand{\asymmetric}[2]{\ensuremath{\{|#1|\}_{#2}}}
\newcommand{\nondetenc}[2]{\ensuremath{\{\langle#1\rangle\}_{#2}}}
\newcommand{\hash}[1]{\ensuremath{\#(#1)}}
\newcommand{\deckey}[1]{\ensuremath{\mathsf{Dec}(#1)}}
\newcommand{\enckey}[1]{\ensuremath{\mathsf{Enc}(#1)}}
\newcommand{\symkey}[1]{\ensuremath{\mathsf{K}_{#1}}}

%% Public Key Crypto

\newcommand{\privkey}[1]{\ensuremath{\mathsf{Dec}_{priv}(#1)}}
\newcommand{\pubkey}[1]{\ensuremath{\mathsf{Enc}_{pub}(#1)}}
\DeclareMathOperator{\encrypt}{Encrypt}
\DeclareMathOperator{\decrypt}{Decrypt}
\DeclareMathOperator{\keygen}{KeyGen}

%% Digital Signatures

\newcommand{\sigkey}[1]{\ensuremath{\mathsf{Enc}_{priv}(#1)}}
\newcommand{\verkey}[1]{\ensuremath{\mathsf{Dec}_{pub}(#1)}}
\DeclareMathOperator{\sign}{Sign}
\DeclareMathOperator{\verify}{Verify}

%% For group notation
\newcommand{\bb}[2]{\ensuremath{\mathbb{#1}_{#2}}}
\newcommand{\g}[1]{\bb{G}{#1}}
\newcommand{\z}[1]{\bb{Z}{#1}}
\newcommand{\bigo}[1]{\ensuremath{\mathcal{O}(#1)}}

\endinput
